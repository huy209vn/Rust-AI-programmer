{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ActionBlock",
  "description": "A single tool action proposed or executed within an episode.",
  "type": "object",
  "properties": {
    "schema_version": {
      "const": "1"
    },
    "id": {
      "type": "string"
    },
    "episode_id": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "tool": {
      "type": "string",
      "enum": [
        "cargo_check",
        "ra_type_of",
        "test",
        "indexer",
        "patcher",
        "doc_index",
        "net_fetch"
      ]
    },
    "args": {
      "type": "object"
    },
    "observation_ref": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "anchors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Anchor"
      }
    },
    "k_budget": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "schema_version",
    "id",
    "tool",
    "args"
  ],
  "$defs": {
    "Anchor": {
      "type": "object",
      "properties": {
        "doc_id": {
          "type": "string"
        },
        "start": {
          "type": "integer",
          "minimum": 0
        },
        "end": {
          "type": "integer",
          "minimum": 0
        },
        "sha256": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "required": [
        "doc_id",
        "start",
        "end",
        "sha256"
      ]
    }
  }
}