{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PatchBundle",
  "description": "A reversible patch with budgets and receipts.",
  "type": "object",
  "properties": {
    "schema_version": {
      "const": "1"
    },
    "id": {
      "type": "string"
    },
    "files_changed": {
      "type": "integer",
      "minimum": 0
    },
    "lines_changed": {
      "type": "integer",
      "minimum": 0
    },
    "diff": {
      "type": "string"
    },
    "anchors": {
      "type": "array",
      "items": {
        "$ref": "docspan.schema.json"
      }
    },
    "risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    }
  },
  "required": [
    "schema_version",
    "id",
    "diff"
  ]
}