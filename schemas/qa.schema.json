{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Anchored QA",
  "type": "object",
  "properties": {
    "schema_version": {
      "const": "1"
    },
    "question": {
      "type": "string"
    },
    "answer": {
      "type": "string"
    },
    "anchors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "docspan.schema.json"
      }
    },
    "difficulty": {
      "type": "string",
      "enum": [
        "easy",
        "medium",
        "hard"
      ]
    },
    "topic": {
      "type": "string"
    }
  },
  "required": [
    "schema_version",
    "question",
    "answer",
    "anchors"
  ]
}