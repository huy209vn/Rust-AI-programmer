{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Observation",
  "description": "Result from a tool call or sensor (cargo/RA/tests/etc).",
  "type": "object",
  "properties": {
    "schema_version": {
      "const": "1"
    },
    "id": {
      "type": "string"
    },
    "action_id": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "tool": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    },
    "success": {
      "type": "boolean"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "schema_version",
    "id",
    "tool",
    "payload",
    "success"
  ]
}